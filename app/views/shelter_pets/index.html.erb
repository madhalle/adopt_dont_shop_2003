<h4><%= link_to "Pet Index", "/pets", method: "get"%> </h4>
<h4><%= link_to "Shelter Index", "/shelters", method: "get"%> </h4>

<h1> <%="#{@shelter.name}"%> </h1>
<% @shelter.pets.each do |pet| %>
  <h2> <%="#{pet.name}"%> </h2>
  <%= image_tag(pet.image, height:"400") %>
  <p>Age: <%= pet.age %></p>
  <p>Sex: <%= pet.sex %></p>
  <p>Shelter ID: <%= pet.shelter_id %></p>
  <p>Description: <%=pet.description %></p>
  <p>Adoption Status: <%= pet.adoption_status %> </p>

  <p><%= link_to "Edit #{pet.name}", "/pets/#{pet.id}/edit", method: "get"%></p>
  <p><%= link_to "Delete #{pet.name}", "/pets/#{pet.id}", method: "delete"%></p>

<% end%>

<%=link_to "Create Pet", "/shelters/#{@shelter.id}/pets/new", method: "get"%>
